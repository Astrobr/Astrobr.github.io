.widget
    .menu-list
        li
            ul
                margin-right: 0
        a
            transition: background-color 0.3s ease-in-out

        .level
            margin-bottom: 0

            .level-left, .level-right, .level-item
                flex-shrink: 1

            .level-left, .level-right
                align-items: flex-start

        .tag
            background: $light-grey
            color: $white-invert

    .tags
        .tag:first-child
            background: whitesmoke
            color: #4a4a4a

        .tag:last-child
            background: #e7e7e7
            color: $white-invert
#toc
    max-height: calc(100vh - 22px)
